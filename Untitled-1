<script>
const products=[{name:'Task Manager'},{name:'Analytics Pro'},{name:'Team Hub'}];
const tasks=[{name:'UI –¥–∏–∑–∞–π–Ω',project:'Alpha'},{name:'API',project:'Beta'}];

const grid=document.getElementById('productGrid');
const taskTable=document.getElementById('taskTable');
const search=document.getElementById('search');
const authModal=document.getElementById('authModal');
const confirmModal=document.getElementById('confirmModal');
const confirmText=document.getElementById('confirmText');

function renderProducts(list){grid.innerHTML='';list.forEach(p=>{grid.innerHTML+=`<div class="card"><span class="badge">–ü–æ–ø—É–ª—è—Ä–Ω–µ</span><h3>${p.name}</h3><br><button class="btn btn-primary" onclick="confirmAction('–î–æ–¥–∞—Ç–∏ ${p.name}?')">–î–æ–¥–∞—Ç–∏</button></div>`})}
function renderTasks(){taskTable.innerHTML='';tasks.forEach(t=>{taskTable.innerHTML+=`<tr><td>${t.name}</td><td>${t.project}</td><td><button class="btn btn-outline" onclick="confirmAction('–í–∏–¥–∞–ª–∏—Ç–∏?')">‚ãÆ</button></td></tr>`})}
function openAuth(){authModal.classList.add('active')}
function closeAuth(){authModal.classList.remove('active')}
function confirmAction(text){confirmText.textContent=text;confirmModal.classList.add('active')}
function closeConfirm(){confirmModal.classList.remove('active')}

search.addEventListener('input',e=>{renderProducts(products.filter(p=>p.name.toLowerCase().includes(e.target.value.toLowerCase())))})
window.addEventListener('keydown',e=>{if(e.key==='Escape'){closeAuth();closeConfirm()}})

renderProducts(products);renderTasks();
</script>
